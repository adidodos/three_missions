rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Profile photos: users/{uid}/profile.jpg
    match /users/{uid}/profile.jpg {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == uid;
    }

    // Workout photos: crews/{crewId}/workouts/{uid}/{dateKey}.jpg
    match /crews/{crewId}/workouts/{uid}/{fileName} {
      // Only the owner can upload/update their photos
      allow write: if request.auth != null && request.auth.uid == uid;

      // All authenticated users can read (for crew table)
      allow read: if request.auth != null;
    }
  }
}
